form(novalidate='novalidate',
data-ng-submit='$ctrl.find()').form-horisontal

  fieldset(data-ng-attr-disabled='{{$ctrl.filterDisabled || undefined}}')

    .form-group.clearfix
      label(for='showType', translate='LBL_SHOW').col-sm-3.control-label.text-right
      .col-sm-7
        select(name='showType',
        data-ng-options='option.val for option in $ctrl.showList track by option.key',
        data-ng-model='$ctrl.formData.show').form-control#showType

    .form-group.clearfix
      label(for='langType', translate='LBL_LANG').col-sm-3.control-label.text-right
      .col-sm-7
        select(name='langType',
        data-ng-options='option.val for option in $ctrl.langList track by option.key',
        data-ng-model='$ctrl.formData.lang').form-control#langType

    .form-group.clearfix
      .col-lg-7.col-lg-offset-4.col-md-offset-2.col-sm-offset-1
        button(type='submit',
        translate='BTN_FIND').btn.btn-success.btn-lg.btn-margin
        button(data-ng-click='$ctrl.clear()',
        translate='BTN_CLR').btn.btn-warning.btn-lg.btn-margin
